# Production Environment
# !!! CHANGE ALL VALUES BELOW !!!

DJANGO_SECRET_KEY=change-this-to-a-very-long-random-string-in-production
DJANGO_SETTINGS_MODULE=config.settings.prod
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Database
POSTGRES_DB=rpa_db_prod
POSTGRES_USER=rpa_user_prod
POSTGRES_PASSWORD=change-this-strong-password
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Redis
REDIS_URL=redis://redis:6379/1

# Celery
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Email Settings (SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-production-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# RPA Settings
RPA_MAX_TASK_DURATION=600
RPA_DEFAULT_DELAY=3
RPA_DEFAULT_MAX_RETRIES=3

# Admin Settings (Change for security)
ADMIN_URL=secret-admin-path/

# CORS Settings
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# SSL/Security
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
