# Development Environment
DJANGO_SECRET_KEY=dev-secret-key-not-for-production
DJANGO_SETTINGS_MODULE=config.settings.dev
DEBUG=True
ALLOWED_HOSTS=*

# Database - SQLite for dev (ใช้ใน local)
# หรือ PostgreSQL ถ้ารันใน Docker
POSTGRES_DB=rpa_db
POSTGRES_USER=rpa_user
POSTGRES_PASSWORD=rpa_password_dev
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Redis
REDIS_URL=redis://redis:6379/1

# Celery
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Email - Console backend for dev
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# RPA Settings
RPA_MAX_TASK_DURATION=600
RPA_DEFAULT_DELAY=5
RPA_DEFAULT_MAX_RETRIES=3
